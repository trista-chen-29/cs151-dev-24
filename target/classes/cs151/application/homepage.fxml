<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cs151.application.HomePage.HomeController"
            stylesheets="@homepage.css"
            styleClass="canvas home-root"
            prefWidth="980" prefHeight="620">

    <!-- TOP BAR -->
    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="topbar">
            <Button text="Add Programming Languages"
                       onAction="#onGoToLanguages"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Prof-Support" styleClass="brand"/>
        </HBox>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="18">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Welcome Back Professor!" styleClass="h1"/>


            <VBox spacing="12" styleClass="card" maxWidth="640">
                <!-- Search -->
                <VBox spacing="8" maxWidth="760">
                    <Label text="Need to find a student?" styleClass="subhead"/>
                    <HBox spacing="8">
                        <TextField fx:id="searchField"
                                   promptText="Search by name, email, skills…"
                                   HBox.hgrow="ALWAYS"/>
                        <Button text="🔍" onAction="#onSearch" minWidth="44"/>
                    </HBox>
                </VBox>

                <!-- Filters card -->
                <VBox maxWidth="760" spacing="12" styleClass="card filters-card">
                    <padding>
                        <Insets top="16" right="16" bottom="16" left="16"/>
                    </padding>

                    <Label text="Filters:" styleClass="filters-title"/>

                    <GridPane hgap="30" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="33"/>
                            <ColumnConstraints percentWidth="33"/>
                            <ColumnConstraints percentWidth="34"/>
                        </columnConstraints>

                        <!-- Programming Languages -->
                        <VBox spacing="7" GridPane.columnIndex="0">
                            <Label text="Programming languages" styleClass="group-title"/>
                            <CheckBox text="C++"        fx:id="plCpp"/>
                            <CheckBox text="Java"       fx:id="plJava"/>
                            <CheckBox text="Python"     fx:id="plPython"/>
                            <CheckBox text="Javascript" fx:id="plJs"/>
                        </VBox>

                        <!-- Databases -->
                        <VBox spacing="7" GridPane.columnIndex="1">
                            <Label text="Databases" styleClass="group-title"/>
                            <CheckBox text="MySQL"       fx:id="dbMysql"/>
                            <CheckBox text="PostgreSQL"  fx:id="dbPostgreSQL"/>
                            <CheckBox text="MongoDB"     fx:id="dbMongo"/>
                            <CheckBox text="SQLite"      fx:id="dbSqlite"/>
                        </VBox>

                        <!-- Interests -->
                        <VBox spacing="7" GridPane.columnIndex="2">
                            <Label text="Professional Interests" styleClass="group-title"/>
                            <CheckBox text="Fullstack Engineer" fx:id="intFullstack"/>
                            <CheckBox text="Software Engineer"  fx:id="intSWE"/>
                            <CheckBox text="AI/ML Engineer"     fx:id="intAIML"/>
                            <CheckBox text="Data Scientist"     fx:id="intDS"/>
                        </VBox>
                    </GridPane>

                    <CheckBox text="Avoid Blacklists" fx:id="avoidBlacklist"/>
                    <HBox alignment="CENTER_RIGHT">
                        <Button text="Add Student" onAction="#onAddStudent"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Button text="Apply Filters" onAction="#onApplyFilters"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>