<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cs151.application.HomePage.HomePageController"
            stylesheets="@home.css" prefWidth="980" prefHeight="620">

    <top>
        <VBox spacing="10" styleClass="header-wrap">
            <HBox alignment="CENTER" spacing="20" styleClass="app-bar">
                <Hyperlink text="Add Programming Languages" onAction="#onAddLanguages"/>
                <Label text="Prof-Support" styleClass="brand"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Add Student" onAction="#onAddStudent" styleClass="cta"/>
            </HBox>

        </VBox>
    </top>

    <center>
        <VBox spacing="18" alignment="TOP_CENTER" padding="20" styleClass="content">
            <Label text="Welcome Back Professor!" styleClass="headline"/>

            <HBox spacing="8" alignment="CENTER_LEFT" maxWidth="720">
                <Label text="Need to find a student?" styleClass="subhead"/>
            </HBox>

            <HBox spacing="6" alignment="CENTER_LEFT" maxWidth="720">
                <TextField fx:id="searchField" promptText="Search by name, email, skillsâ€¦" HBox.hgrow="ALWAYS"/>
                <Button text="ðŸ”" onAction="#onSearch" minWidth="44"/>
            </HBox>

            <VBox maxWidth="720" styleClass="filter-card" spacing="10" padding="16">
                <Label text="Filters:" styleClass="filters-title"/>
                <GridPane hgap="30" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints halignment="LEFT" percentWidth="33"/>
                        <ColumnConstraints halignment="LEFT" percentWidth="33"/>
                        <ColumnConstraints halignment="LEFT" percentWidth="34"/>
                    </columnConstraints>

                    <!-- Programming Languages -->
                    <VBox spacing="6" GridPane.columnIndex="0">
                        <Label text="Programming Languages" styleClass="group-title"/>
                        <CheckBox text="C++" fx:id="plCpp"/>
                        <CheckBox text="Python" fx:id="plPython"/>
                        <CheckBox text="Java" fx:id="plJava"/>
                        <CheckBox text="Javascript" fx:id="plJs"/>
                    </VBox>

                    <!-- Databases -->
                    <VBox spacing="6" GridPane.columnIndex="1">
                        <Label text="Databases" styleClass="group-title"/>
                        <CheckBox text="MySQL" fx:id="dbMysql"/>
                        <CheckBox text="Postgres" fx:id="dbPostgres"/>
                        <CheckBox text="MongoDB" fx:id="dbMongo"/>
                    </VBox>

                    <!-- Professional Interests -->
                    <VBox spacing="6" GridPane.columnIndex="2">
                        <Label text="Professional Interests" styleClass="group-title"/>
                        <CheckBox text="Frontend" fx:id="piFrontend"/>
                        <CheckBox text="Backend" fx:id="piBackend"/>
                        <CheckBox text="Data Engineer" fx:id="piDE"/>
                        <CheckBox text="Full Stack" fx:id="piFullStack"/>
                        <CheckBox text="Data Analyst" fx:id="piDA"/>
                    </VBox>
                </GridPane>

                <CheckBox text="Avoid Blacklists" fx:id="avoidBlacklist"/>
                <HBox alignment="CENTER_RIGHT">
                    <Button text="Apply Filters" onAction="#onApplyFilters"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>
</BorderPane>