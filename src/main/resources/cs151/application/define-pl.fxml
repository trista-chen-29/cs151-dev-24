<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>



<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cs151.application.ProgrammingLanguages.PLController"
            stylesheets="@define-pl.css"
            styleClass="canvas pl-root"
            prefWidth="980" prefHeight="620">

    <!-- Top bar -->
    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="topbar">
            <Hyperlink text="Go to Homepage" onAction="#onGoHome" styleClass="toplink"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Prof-Support" styleClass="brand"/>
        </HBox>
    </top>

    <!-- CONTENT -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="18">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Programming Languages" styleClass="h1"/>

            <!-- Card with form + list -->
            <VBox spacing="12" styleClass="card" maxWidth="640">

                <!-- Input -->
                <VBox spacing="6">
                    <Label text="Enter Language name *" styleClass="field-label"/>
                    <TextField fx:id="languageField" promptText="e.g., Java"/>
                </VBox>

                <!-- Button -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="Save" onAction="#onSave" defaultButton="true"/>
                    <Label fx:id="errorLabel" styleClass="error"/>
                </HBox>

                <!-- Existing list -->
                <VBox spacing="6">
                    <!-- tableView with language  Column-->
                    <TableView fx:id="languageList" prefHeight="200" styleClass="field-label">
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="nameColumn" text="Existing Languages" prefWidth="400" styleClass="field-label"/>
                        </columns>
                    </TableView>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
