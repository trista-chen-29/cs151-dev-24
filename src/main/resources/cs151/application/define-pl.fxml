<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cs151.application.ProgrammingLanguages.PLController"
            stylesheets="@define-pl.css"
            styleClass="canvas pl-root"
            prefWidth="980" prefHeight="620">

    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="topbar">
            <Hyperlink text="Go to Homepage" fx:id="goHomeLink" styleClass="toplink"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Prof-Support" styleClass="brand"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="18">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Programming Languages" styleClass="h1"/>

            <VBox spacing="12" styleClass="card" maxWidth="640">

                <VBox spacing="6">
                    <Label text="Enter Language name *" styleClass="field-label"/>
                    <TextField fx:id="languageField" promptText="e.g., Java"/>
                </VBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="saveButton" text="Save" defaultButton="true"/>
                    <!-- 如果你不需要 UI 的清空鍵，也可以保留但不綁動作 -->
                    <Button fx:id="clearButton" text="Clear All"/>
                    <Label fx:id="errorLabel" styleClass="error"/>
                </HBox>

                <VBox spacing="6">
                    <Label text="Existing Languages" styleClass="field-label"/>
                    <ListView fx:id="languageList" prefHeight="200" styleClass="list-card"/>
                </VBox>

            </VBox>
        </VBox>
    </center>
</BorderPane>
