<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cs151.application.studentprofile.CommentsController"
            stylesheets="@/cs151/application/comments.css">


    <top>
        <HBox spacing="12" styleClass="appbar">
            <Button text="Back to Profile" onAction="#onBackToProfile" styleClass="btn-secondary"/>
            <Label fx:id="lbTitle" text="Comments" styleClass="appbar-title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Prof-Support" styleClass="appbar-brand"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="16" styleClass="page">
            <VBox maxWidth="960" spacing="12" styleClass="card">
                <Label text="Enter Comment *" />
                <TextArea fx:id="taBody"
                          promptText="e.g., Excellent performance in recent code review"
                          prefRowCount="4"/>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Button text="Save" onAction="#onAdd" styleClass="btn-primary"/>
                    <Label fx:id="lbError" styleClass="error"/>
                </HBox>

                <TableView fx:id="tvComments" prefHeight="320">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colWhen" text="Created" prefWidth="220"/>
                        <TableColumn fx:id="colBody" text="Comment"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>