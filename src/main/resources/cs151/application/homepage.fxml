<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cs151.application.homepage.HomePageController"
            stylesheets="@homepage.css"
            prefWidth="1100" prefHeight="680">

    <!-- Top bar -->
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="topbar">
            <padding><Insets top="10" right="16" bottom="10" left="16"/></padding>

            <Button text="Define Programming Languages"
                    onAction="#onGoToLanguages"
                    styleClass="pill"/>

            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Prof-Support" styleClass="brand"/>
        </HBox>
    </top>

    <!-- Center content -->
    <center>
        <VBox spacing="18" alignment="TOP_CENTER">
            <padding><Insets top="24" left="24" right="24" bottom="24"/></padding>

            <!-- Title -->
            <Label text="Welcome back, Professor!" styleClass="h1"/>

            <!-- Search card -->
            <VBox styleClass="card" spacing="12" maxWidth="1000">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <!-- NOTE: id matches controller field 'searchField' -->
                    <TextField fx:id="searchField"
                               promptText="Search by name, language, databaseâ€¦"
                               HBox.hgrow="ALWAYS"/>
                    <Button text="Search" onAction="#onSearch" styleClass="primary"/>
                </HBox>
            </VBox>

            <!-- Primary actions -->
            <HBox spacing="16" alignment="CENTER">
                <!-- Define Student Profile -->
                <VBox styleClass="action-card" spacing="10" prefWidth="480">
                    <Label text="Define Student Profile" styleClass="card-title"/>
                    <Label text="Create a new student profile or update an existing one."
                           styleClass="card-sub"/>
                    <HBox alignment="CENTER_LEFT">
                        <Button text="Add Student Profile"
                                onAction="#onGoToStudentProfile"
                                styleClass="primary"/>
                    </HBox>
                </VBox>

                <!-- View Student Profiles -->
                <VBox styleClass="action-card" spacing="10" prefWidth="480">
                    <Label text="View Student Profiles" styleClass="card-title"/>
                    <Label text="Search, filter, and review saved profiles."
                           styleClass="card-sub"/>
                    <HBox alignment="CENTER_LEFT">
                        <Button text="View Student Profiles"
                                onAction="#onOpenDirectory"
                                styleClass="primary"/>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>