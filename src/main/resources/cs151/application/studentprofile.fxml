<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cs151.application.studentprofile.StudentProfileController"
            prefWidth="1100" prefHeight="680">

    <!-- Non-Node definitions -->
    <fx:define>
        <ToggleGroup fx:id="tgJob"/>
    </fx:define>

    <!-- Top bar -->
    <top>
        <HBox spacing="12">
            <padding><Insets top="14" right="16" bottom="14" left="16"/></padding>
            <Label text="Student Profile"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnGoHome" text="Go Back To Homepage" onAction="#onGoBackHome"/>
        </HBox>
    </top>

    <!-- Main content -->
    <center>
        <GridPane hgap="16" vgap="14">
            <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
            <columnConstraints>
                <ColumnConstraints minWidth="320" hgrow="NEVER"/>
                <ColumnConstraints minWidth="520" hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Left panel -->
            <VBox spacing="12" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <VBox spacing="8" alignment="CENTER">
                    <ImageView fx:id="ivPhoto" fitWidth="140" fitHeight="140" preserveRatio="true"/>
                    <Button fx:id="btnUpdatePhoto" text="Update Photo" onAction="#onUpdatePhoto"/>
                </VBox>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Full Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfFullName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Academic Status" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbAcademicStatus" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Current Job Status" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <HBox spacing="12" GridPane.rowIndex="2" GridPane.columnIndex="1">
                        <RadioButton fx:id="rbEmployed" text="Employed" toggleGroup="$tgJob"/>
                        <RadioButton fx:id="rbUnemployed" text="Not Employed" toggleGroup="$tgJob"/>
                    </HBox>

                    <Label text="Job Details" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextArea fx:id="taJobDetails" GridPane.rowIndex="3" GridPane.columnIndex="1" prefRowCount="5"/>

                    <HBox spacing="20" GridPane.rowIndex="4" GridPane.columnIndex="1">
                        <CheckBox fx:id="cbWhitelist" text="Whitelist"/>
                        <CheckBox fx:id="cbBlacklist" text="Blacklist"/>
                    </HBox>
                </GridPane>
            </VBox>

            <!-- Right panel -->
            <VBox spacing="16" GridPane.columnIndex="1" GridPane.rowIndex="0">

                <!-- Skills -->
                <GridPane hgap="16" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" hgrow="ALWAYS"/>
                        <ColumnConstraints percentWidth="50" hgrow="ALWAYS"/>
                    </columnConstraints>

                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Programming Languages Known"/>
                        <ListView fx:id="lvProgLangs" prefHeight="130"/>
                    </VBox>

                    <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Databases Known"/>
                        <ListView fx:id="lvDatabases" prefHeight="130"/>
                    </VBox>
                </GridPane>

                <!-- Preferred Role -->
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="220"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Preferred Professional Role" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="cbRole" promptText="Select a role"
                              GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="260"/>
                </GridPane>

                <!-- Comments -->
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                        <ColumnConstraints minWidth="140"/>
                    </columnConstraints>

                    <Label text="New Comment" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextArea fx:id="taNewComment" GridPane.columnIndex="1" GridPane.rowIndex="0" prefRowCount="3"/>
                    <Button text="Add Comment" onAction="#onAddComment"
                            GridPane.columnIndex="2" GridPane.rowIndex="0" minWidth="120"/>
                </GridPane>

                <Label text="Comments"/>
                <ListView fx:id="lvComments" prefHeight="140"/>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Clear" onAction="#onClear" minWidth="96"/>
                    <Button text="Save"  onAction="#onSave"  minWidth="96"/>
                </HBox>

                <Label fx:id="lbError"/>
            </VBox>
        </GridPane>
    </center>
</BorderPane>
